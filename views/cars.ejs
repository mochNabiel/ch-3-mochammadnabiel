<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cars</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Cars</h1>
        <div class="row">
            <% cars.forEach(car => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= car.image %>" class="card-img-top" alt="Car Image">
                        <div class="card-body">
                            <h5 class="card-title"><%= car.manufacture %> <%= car.model %> - <%= car.year %></h5>
                            <p class="card-text"><strong>Description:</strong> <%= car.description %></p>
                            <p class="card-text"><strong>Rent per Day:</strong> <%= car.rentPerDay %></p>
                            <p class="card-text"><strong>Type:</strong> <%= car.type %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
